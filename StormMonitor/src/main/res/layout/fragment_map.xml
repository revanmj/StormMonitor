<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.revanmj.stormmonitor.MapActivity$PlaceholderFragment"
    android:padding="0dp">

    <SurfaceView
        android:layout_width="384dp"
        android:layout_height="384dp"
        android:id="@+id/surfaceView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/map" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ostatnia aktualizacja: "
        android:id="@+id/textView"
        android:layout_below="@+id/surfaceView"
        android:layout_alignLeft="@+id/surfaceView"
        android:layout_alignStart="@+id/surfaceView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2000 11:30"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView" />
</RelativeLayout>
