<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|left"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="18dp"
    android:layout_marginEnd="40dp"
    android:clickable="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/colorRectangle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/cityText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/colorRectangle"
        android:text="Miasto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/colorRectangle"
        android:text="@string/label_storm_prob"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/colorRectangle"
        android:text="@string/label_storm_time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/chanceText"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="0 / 255"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chanceText"
        android:layout_alignTop="@+id/textView3"
        android:text="0 min"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="-2dp"
        android:text="@string/label_rain_prob"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-2dp"
        android:text="@string/label_rain_time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rainChance"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/chanceText"
        android:text="0 / 255"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rainTime"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chanceText"
        android:layout_alignStart="@+id/chanceText"
        android:layout_alignTop="@+id/textView4"
        android:text="0 min"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />
</RelativeLayout>